<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #8A2BE2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistrationController">
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Registration Page" />
    <TextField fx:id="usernameField" alignment="CENTER" promptText="Username" />
    <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Password" />
    <Label text="Confirm Password:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <PasswordField fx:id="confirmPasswordField" alignment="CENTER" />
    <Button onAction="#handleRegisterButtonAction" style="-fx-background-color: #6495ED; -fx-text-fill: white;" text="Register" underline="true" />
    <Label fx:id="statusLabel" style="-fx-text-fill: green;" text="" />
</VBox>
